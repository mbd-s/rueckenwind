<div class="container">
  <div class="row">
    <%= form_for @order do |f| %>
      <div class="input-field col s4">
        <%= f.label :mens_bikes %>
        <%= f.number_field :mens_bikes, min: 0 %>
      </div>
      <div class="input-field col s4">
        <%= f.label :womens_bikes %>
        <%= f.number_field :womens_bikes, min: 0 %>
      </div>
      <div class="input-field col s4">
        <%= f.label :kids_bikes %>
        <%= f.number_field :kids_bikes, min: 0 %>
      </div>
      <div class="input-field col s12">
        <%= f.label :notes %>
        <%= f.text_area :notes %>
      </div>
      <div class="submit_button waves-effect waves-light btn green">
        <%= f.submit "Submit order"%>
      </div>
    <% end %>
  </div>
</div>
