<div class="container">
  <div class="row">
    <%= form_for :donor do |d| %>
      <div class="input-field col s6">
        <%= d.label :first_name %>
        <%= d.text_field :first_name %>
      </div>
      <div class="input-field col s6">
        <%= d.label :last_name %>
        <%= d.text_field :last_name %>
      </div>
      <div class="input-field col s6">
        <%= d.label :email %>
        <%= d.email_field :email %>
      </div>
      <div class="input-field col s6">
        <%= d.label :email %>
        <%= d.email_field :email %>
      </div>
      <div class="input-field col s6">
        <%= d.label :phone %>
        <%= d.telephone_field :phone %>
      </div>
      <div class="input-field col s6">
        <%= d.label :bikes %>
        <%= d.number_field :bikes, min: 0 %>
      </div>
      <p class="input-field">
        <%= check_box_tag(:parts) %>
        <%= label_tag(:parts, "I also have bike parts to donate.") %>
      </p>
      <div class="input-field col s12">
        <%= d.label :notes %>
        <%= d.text_area :notes %>
      <div class="submit_button waves-effect waves-light btn green">
        <%= d.submit "Save" %>
      </div>
    <% end %>
  </div>
</div>
