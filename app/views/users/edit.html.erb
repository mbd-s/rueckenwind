<div class="row">
  <div class="col s12">
    <h5>Edit a user.</h5>
  </div>
</div>

<%= form_for @user do |f| %>
  <div class="row">
    <div class="input-field col s6">
      <%= f.text_field :first_name, autofocus: true %>
      <%= f.label :first_name %>
    </div>
    <div class="input-field col s6">
      <%= f.text_field :last_name %>
      <%= f.label :last_name %>
    </div>
  </div>

  <div class="row">
    <div class="input-field col s12">
      <%= f.email_field :email %>
      <%= f.label :email %>
    </div>
  </div>

  <div class="row">
    <div class="input-field col s12">
      <%= f.select :role, options_for_select({ "Admin" => "admin", "Organizer" => "organizer", "Volunteer" => "volunteer" }, @user.role)   %>
      <%= f.label :role %>
    </div>
  </div>


  <div class="actions submit_button waves-effect waves-light btn">
    <%= f.submit "Save" %>
  </div>

<% end %>
