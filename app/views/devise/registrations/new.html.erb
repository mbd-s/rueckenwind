<div class="row">
  <div class="col s12">
    <h5>Register as a volunteer.</h5>
  </div>
</div>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>
  <%= f.hidden_field :role, value: "volunteer" %>

  <div class="row">
    <div class="input-field col s12">
      <%= f.email_field :email, autofocus: true %>
      <%= f.label :email %><br />
    </div>
  </div>

  <div class="row">
    <div class="input-field col s12">
      <%= f.password_field :password, autocomplete: "off" %>
      <%= f.label :password, "Password (#{@minimum_password_length} characters minimum)" %>
    </div>
  </div>

  <div class="row">
    <div class="input-field col s12">
      <%= f.password_field :password_confirmation, autocomplete: "off" %>
      <%= f.label :password_confirmation %><br />
    </div>
  </div>

  <div class="actions submit_button waves-effect waves-light btn light-green">
    <%= f.submit "Sign up" %>
  </div>
<% end %>
<br />

<% if current_user.nil? %>
  <%= render "devise/shared/links" %>
<% end %>
