<h1>New customer form</h1>

<%= form_for @customer do |f| %>
  <p>
    <%= f.label :first_name %>
    <%= f.text_field :first_name %>
    <%= f.label :last_name %>
    <%= f.text_field :last_name %>
  </p>
  <p>
    <%= f.label :email %>
    <%= f.email_field :email %>
    <%= f.label :email %>
    <%= f.email_field :email %>
    <%= f.label :phone %>
    <%= f.telephone_field :phone %>
    <%= f.label :facebook %>
    <%= f.url_field :facebook %>
  </p>
  <div class="submit_button">
    <%= f.submit "Save details"%>
  </div>
<% end %>
