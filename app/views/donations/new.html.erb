<div class="container">
  <div class="row">
    <%= form_for @donation do |f| %>
    <div class="input-field col s6">
      <%= d.label :bikes %>
      <%= d.number_field :bikes, min: 0 %>
    </div>
    <div class="input-field">
      <%= check_box_tag(:parts) %>
      <%= label_tag(:parts, "I also have bike parts to donate.") %>
    </div>
    <div class="input-field col s12">
      <%= d.label :notes %>
      <%= d.text_area :notes %>
    </div>
      <div class="submit_button waves-effect waves-light btn green">
        <%= f.submit "Submit order"%>
      </div>
    <% end %>
  </div>
</div>
