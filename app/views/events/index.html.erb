<table class="striped light-green responsive-table">
  <thead>
    <tr>
      <th>Date</th>
      <th>Start time</th>
      <th>End time</th>
      <th>Date created</th>
    </tr>
  </thead>
  <tbody>
    <% @events.reverse_each do |event| %>
      <tr>
        <td><%= event.date.strftime("%d %b. %Y") %></td>
        <td><%= event.start_time %></td>
        <td><%= event.end_time %></td>
        <td><%= event.created_at.strftime("%d %b. %Y") %></td>
        <td><%= link_to "Edit", edit_event_path(event) %></td>
        <td><%= link_to "Delete", event, method: :delete, data: { confirm: "Are you sure?" } %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
