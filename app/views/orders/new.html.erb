<h1>New order</h1>

<%= form_for :order do |f| %>
  <p>
    <%= f.label :first_name %>
    <%= f.text_field :first_name %>
    <%= f.label :last_name %>
    <%= f.text_field :last_name %>
  </p>
  <p>
    <%= f.label :email %>
    <%= f.email_field :email %>
    <%= f.label :phone %>
    <%= f.telephone_field :phone %>
    <%= f.label :facebook %>
    <%= f.url_field :facebook %>
  </p>
  <p>
    <%= f.label :mens_bikes %>
    <%= f.text_field :mens_bikes %>
    <%= f.label :womens_bikes %>
    <%= f.text_field :womens_bikes %>
    <%= f.label :kids_bikes %>
    <%= f.text_field :kids_bikes %>
  </p>
  <%= f.label :notes %>
  <%= f.text_area :notes %>
  <p>
   <%= f.submit %>
 </p>
<% end %>
