<table class="striped responsive-table">
  <thead>
    <tr>
      <th>Date</th>
      <th>Start time</th>
      <th>End time</th>
      <th>Organizer</th>
      <th>Volunteer spaces</th>
      <th>Volunteers needed</th>
      <th>
        Customer spaces
      </th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @events.reverse_each do |event| %>
      <tr>
        <td><%= event.date.strftime("%d %b. %Y") %></td>
        <td><%= event.start_time.strftime("%H:%M") %></td>
        <td><%= event.end_time.strftime("%H:%M") %></td>
        <td><%= event.organizer %></td>
        <td><%= event.volunteer_spaces %></td>
        <td><%= event.spaces_available %></td>
        <td>
          <%= event.order_spaces %>
        </td>
        <td>
          <%= link_to "Add Customers", add_customer_event_path(event) %>
          |
          <%= link_to "Send Invitations", send_invitations_event_path(event) %>
          |
          <%= link_to "Edit", edit_event_path(event) %>
          |
          <%= link_to "Delete", event, method: :delete, data: { confirm: "Are you sure?" } %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to new_event_path, class: "btn-floating btn-large waves-effect waves-light" do %>
    <i class="material-icons">add</i>
<% end %>
