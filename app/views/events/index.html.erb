<table class="striped responsive-table">
  <thead>
    <tr>
      <th>Date</th>
      <th>Start time</th>
      <th>End time</th>
      <th>Date created</th>
      <th>Organizer</th>
      <th>Volunteers</th>
    </tr>
  </thead>
  <tbody>
    <% @events.reverse_each do |event| %>
      <tr>
        <td><%= event.date.strftime("%d %b. %Y") %></td>
        <td><%= event.start_time.strftime("%I:%M %p") %></td>
        <td><%= event.end_time.strftime("%I:%M %p") %></td>
        <td><%= event.created_at.strftime("%d %b. %Y") %></td>
        <td><%= event.organizer %></td>
        <td><%= event.users.map{|u| u.name}.join(', ') %></td>
        <td><%= link_to "Edit", edit_event_path(event) %></td>
        <td><%= link_to "Delete", event, method: :delete, data: { confirm: "Are you sure?" } %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to new_event_path, class: "btn-floating btn-large waves-effect waves-light" do %>
    <i class="material-icons">add</i>
<% end %>
